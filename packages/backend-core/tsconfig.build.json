{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node", "jest"],
    "outDir": "dist",
    "skipLibCheck": true,
    "paths": {
      "@clairview/types": ["../types/src"],
      "@clairview/shared-core": ["../shared-core/src"]
    }
  },
  "include": ["**/*.js", "**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.spec.js",
    "__mocks__"
  ]
}
